<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="datos.Disponibilidad" table="disponibilidad">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="date" type="org.hibernate.type.LocalDateType" column="fecha"/>
        <property name="time" type="org.hibernate.type.LocalTimeType" column="hora"/>
        <property name="blocked" type="boolean" column="disponibilidad"/> 
        
        <many-to-one name="profesional" class="datos.Profesional" column="id_profesional" not-null="true"/>
    </class>
</hibernate-mapping>
