<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="datos.Persona" table="persona">
        <id column="id" name="id" type="long">
            <generator class="identity"/>
        </id>
        <property column="nombre" name="nombre" type="string"/>
        <property column="contraseÃ±a" name="contrasena" type="string"/>
        <one-to-one name="contacto" class="datos.Contacto"/>

        <joined-subclass name="datos.Profesional" table="profesional">
       	        <key column="idpersona"/>
            <many-to-one name="especialidad" class="datos.Especialidad" column="idespecialidad" not-null="true" lazy="false"/>
            
            <set name="disponibilidades" table="disponibilidad" order-by="iddisponibilidad asc" inverse="true" lazy="true" fetch="select">
                <key column="idpersona" not-null="true"/>
                <one-to-many class="datos.Disponibilidad"/>
            </set>
          </joined-subclass>  
    </class>
</hibernate-mapping>
