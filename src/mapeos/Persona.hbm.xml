<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="datos.Persona" table="persona">
        <id name="id" column="id_persona">
            <generator class="identity"/>
        </id>
        <property name="nombre" column="nombre" type="string"/>
        <property name="contrasena" column="contraseÃ±a" type="string"/>
        <one-to-one name="contacto" class="datos.Contacto"/>

        <joined-subclass name="datos.Profesional" table="profesional">
            <key column="id_profesional"/>
            <many-to-one name="especialidad" class="datos.Especialidad" column="id_especialidad" not-null="true"
                         lazy="false"/>
            <set name="disponibilidades" table="disponibilidad" order-by="id asc" inverse="true"
                 lazy="true" fetch="select">
                <key column="id_profesional" not-null="true"/>
                <one-to-many class="datos.Disponibilidad"/>
            </set>
        </joined-subclass>

        <joined-subclass name="datos.Cliente" table="cliente">
            <key column="id_cliente"/>
            <list name="turnos" table="turnos" inverse="true" lazy="true" fetch="select">
                <key column="id_cliente" not-null="true"/>
                <index column="orden"/>
                <one-to-many class="datos.Turno"/>
            </list>
        </joined-subclass>
    </class>
</hibernate-mapping>
